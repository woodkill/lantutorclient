<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 버튼이 눌렸을 때의 상태 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF6F00" /> <!-- 눌렸을 때의 색상 -->
            <corners android:radius="16dp" /> <!-- 둥근 모서리 -->
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- 기본 상태 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFA000"
                android:endColor="#FFC107"
                android:angle="90"/>
            <corners android:radius="16dp" /> <!-- 둥근 모서리 -->
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>